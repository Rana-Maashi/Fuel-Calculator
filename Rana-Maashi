<body>
<div class="calculator">
  <input type="number" id="input1" placeholder="العدد الأول">
  <input type="number" id="input2" placeholder="العدد الثاني">
  <br>
  <button onclick="calculate('+')">جمع</button>
  <button onclick="calculate('-')">طرح</button>
  <button onclick="calculate('*')">ضرب</button>
  <button onclick="calculate('/')">قسمة</button>
  <div class="result" id="result"></div>
</div>
<script>
function calculate(op) {
  const a = parseFloat(document.getElementById('input1').value);
  const b = parseFloat(document.getElementById('input2').value);
  let res;
  if(op === '+') res = a + b;
  else if(op === '-') res = a - b;
  else if(op === '*') res = a * b;
  else if(op === '/') res = b !== 0 ? a / b : 'لا يمكن القسمة على صفر';
  document.getElementById('result').innerText = 'النتيجة: ' + res;
}
</script>
</body>
